<%- include('partials/header') %>

<div class="container mt-5">
  <img src="images/notes-page.png" class="img-fluid w-50">
  <h1 class="display-3 ml-2">Sticky Notes</h1>
  <% if (userNotes.length === 0) { %>
    <p class="lead ml-2">Uh oh, looks like you have no Notes, ready to create some?</p>
    <a class="btn btn-lg button ml-2" href="/create" role="button">Create Note</a>
  <% } else { %>
    <p class="lead ml-2">Write down your thoughts, ideas, reminders and more!</p>
    <a class="btn btn-lg button ml-2" href="/create" role="button">Create Note</a>
  <% } %>
  <hr>
  <div class="row">
    <% userNotes.forEach(function(note) { %>
    <div class="col-xl-3 col-lg-4 col-md-6 col-sm-12 note">
        <div class="card">
          <div class="card-header card-bg text-white">
            <%= note.title %>
          </div>
          <div class="card-body">
              <p class="card-text">
                <%= note.content %>
              </p>
          </div>
          <div class="card-footer footer-bg text-right">
            <a class="btn btn-md button" href="/notes/<%=note._id%>" role="button">Delete</a>
          </div>
        </div>
      <p> <%= locals.user %></p>
    </div>
    <% }); %>
  </div>
</div>

<%- include('partials/footer') %>
