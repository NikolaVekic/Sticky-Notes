<!-- Checks if the route is active and adds bootstrap active class to the nav links -->
<% function isActive(route) { return locals.currentUrl === route ? 'active' : '';} %>
<!-- Checks if its the current URL for our nav bar -->
<% function isActive(route) { return locals.currentUrl === route ? 'active' : ''; } %>


<nav class="navbar navbar-expand-lg navbar-dark nav-style">
  <div class="container-fluid">
    <a class="navbar-brand" href="/"><i class="fa-solid fa-note-sticky" style="color: #ffffff;"></i></a>
      <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNavAltMarkup" aria-controls="navbarNavAltMarkup" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
        <div class="navbar-nav">
          <% if (locals.currentUser)  { %>
            <!-- Content to display if the user is authenticated -->
            <a class="nav-link <%= isActive('/') %>" href="/">Home</a>
            <a class="nav-link <%= isActive('/notes') %>" href="/notes">Notes</a>
            <a class="nav-link <%= isActive('/create') %>" href="/create">Create</a>            
          <% } else { %>
            <a class="nav-link  <%= isActive('/') %>" aria-current="page" href="/">Home</a>
            <a class="nav-link  <%= isActive('/login') %>" href="/login">Login</a>
            <a class="nav-link  <%= isActive('/register')%>"  href="/register">Register</a>
          <% } %>  
        </div>
      </div>
  </div>
</nav>


